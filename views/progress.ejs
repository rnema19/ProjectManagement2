<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Progress</title>
    <link rel="stylesheet" href="/css/progress.css" />
    </head>
<body>
    <nav>
        <ul>
            <li><a href="/dashboard">Home</a></li>
            <li><a href="/project">Projects</a></li>
            <li><a href="/project/<%=project._id%>/progress/glance">Glance View</a></li>
            <li><a href="#tasks">Notifications</a></li>
            <li><a href="#reports">About</a></li>
        </ul>
    </nav>

    <div class="container">
        <h1>Project Progress for : <%= project.title %></h1>
        <h3>Start Date : <%= project.startDate %></h3>
        <h3>Expected Date : <%= project.expectedDate %></h3>

        <!-- Progress bar section -->
        <div class="progress-container">
            <h3>Overall Project Progress</h3>
            <div class="progress-bar-background">
                <div class="progress-bar-fill" id="progressBar"></div>
            </div>
            <% if (percent) { %>
                <p><strong>Progress:</strong> <%= percent %> % completed</p>
            <% } else { %>
                <p><strong>Progress:</strong> Data not available</p>
            <% } %>
        </div>

        <div class="progress-grid">
    <% if (project.progresses && project.progresses.length > 0) { %>
        <% for (let prog of project.progresses) { %>
            <div class="progress-card">
                <h3>Stage: <%- prog.task %></h3>
                <p><strong>Description:</strong> <%- prog.description %></p>
                <% if (prog.completed) { %>
                    <p><strong>Sub task completion percentage:</strong> 100% done, sub task is finished!!</p>
                <% } else { %>
                    <p><strong>Sub task completion percentage:</strong> <%= prog.percentage %> % done</p>
                <% } %>
                <p><strong>Expected Completion Date:</strong> <%- prog.final_date.toDateString() %></p>
                <a href="/project/<%= project._id %>/progress/<%= prog._id %>/viewprogress">View Task</a>
                <a href="/project/<%= project._id %>/progress/<%= prog._id %>/editprogress">Edit Task</a>
            </div>
        <% } %>
    <% } %>
</div>



        <!-- Add Progress Button -->
        <a href="/project/<%= project._id %>/progress/addprogress" class="button">
            <button >Add Progress</button> 
        </a>
        <a href="/project/<%= project._id %>" class="back">
            <button >Back</button> 
        </a>
    </div>

    <div class="footer">
        <p>&copy; 2024 Project Management. All rights reserved.</p>
    </div>

    <script>
        document.getElementById("progressBar").style.width = "<%= percent %>%";
    </script>
</body>
</html>
